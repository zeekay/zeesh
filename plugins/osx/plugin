alias lla='ls -lhAGF'
alias lsla='ls -lhAGF'
alias lt='ls -lhtGF'
alias lta='ls -lhtAGF'
alias o=open
alias ql='qlmanage -p > /dev/null 2>&1'
alias topc='top -o cpu'
alias topm='top - vsize'
alias hdimount='hdiutil mount'
alias hdidetach='hdiutil detach'
alias forceeject='hdiutil detach -force'
