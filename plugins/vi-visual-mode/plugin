### vi-visual-mode / zeesh! plugin

[ -d "$plugin_dir/lib" ] || source "$plugin_dir/install"

source "$plugin_dir/lib/zle_vi_visual.zsh" >/dev/null 2>&1

if [ "$EDITOR" = "vim" ]; then
    bindkey -rpM vivis '^['
    bindkey -rpM vivis ''
    bindkey -M vivis '' zle-esc-in-place
    bindkey -M vivis '^[' zle-esc-in-place
    bindkey -M vivis 'i' vi-insert
fi
